<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/detail_body_top_margin"
        android:layout_marginLeft="@dimen/detail_inner_horiz_margin"
        android:layout_marginStart="@dimen/detail_inner_horiz_margin"
        android:layout_marginRight="@dimen/detail_inner_horiz_margin"
        android:layout_marginEnd="@dimen/detail_inner_horiz_margin"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        android:layout_marginTop="-2dp">

        <TextView
            style="?android:attr/textAppearanceMedium"
            android:id="@+id/article_paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_body_top_margin"
            android:layout_marginBottom="@dimen/detail_body_top_margin"
            android:layout_marginLeft="@dimen/detail_text_horiz_margin"
            android:layout_marginStart="@dimen/detail_text_horiz_margin"
            android:layout_marginRight="@dimen/detail_text_horiz_margin"
            android:layout_marginEnd="@dimen/detail_text_horiz_margin"
            android:lineSpacingMultiplier="@fraction/detail_body_line_spacing_multiplier"
            android:textColor="@android:color/secondary_text_light"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec vulputate, turpis in aliquam suscipit, sapien sapien aliquet mi, sodales eleifend odio orci et sapien. Vestibulum pellentesque porta mauris. Cras interdum justo non enim facilisis hendrerit et ornare felis. Maecenas in tincidunt odio, non vehicula dui."
            android:textColorLink="@color/theme_accent"
            android:textSize="@dimen/detail_body_text_size" />
    </android.support.v7.widget.CardView>
</FrameLayout>
